<?xml version="1.0" encoding="utf-8"?>
<configuration>

	<!-- ================= WEB FORMS ================= -->
	<system.web>
		<compilation debug="true" targetFramework="4.8" />
		<pages controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID" />
	</system.web>

	<!-- Página de inicio -->
	<system.webServer>
		<defaultDocument enabled="true">
			<files>
				<clear />
				<add value="Default.aspx" />
			</files>
		</defaultDocument>
	</system.webServer>

	<!-- ============ CONFIGURACIÓN DE SERVICIOS SOAP ============ -->
	<system.serviceModel>
		<bindings>
			<basicHttpBinding>
				<binding name="PropietarioPortBinding" />
				<binding name="VehiculoPortBinding" />
				<binding name="VehiculoPropietarioPortBinding" />
			</basicHttpBinding>
		</bindings>

		<client>
			<endpoint
			  address="http://localhost:8080/TransitSoftWS/Propietario"
			  binding="basicHttpBinding"
			  bindingConfiguration="PropietarioPortBinding"
			  contract="PropietarioWS.Propietario"
			  name="PropietarioPort" />

			<endpoint
			  address="http://localhost:8080/TransitSoftWS/Vehiculo"
			  binding="basicHttpBinding"
			  bindingConfiguration="VehiculoPortBinding"
			  contract="VehiculoWS.Vehiculo"
			  name="VehiculoPort" />

			<endpoint
			  address="http://localhost:8080/TransitSoftWS/VehiculoPropietario"
			  binding="basicHttpBinding"
			  bindingConfiguration="VehiculoPropietarioPortBinding"
			  contract="VehiculoPropietarioWS.VehiculoPropietario"
			  name="VehiculoPropietarioPort" />
		</client>
	</system.serviceModel>

</configuration>